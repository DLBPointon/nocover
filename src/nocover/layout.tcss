* {
    background: #1f2837;
}

#app-title {
    background: black 100%;
}

DetailsPanel {
    max-width: 70%;
    border: solid cyan;
    padding: 1;
    border-title-color: white;
}

Screen {
    layout: horizontal;
}

LoadingScreen {
    layer: overlay;
    align: center middle;
    background: $surface;
    opacity: 100%;
    transition: opacity 400ms;
}

#ascii_logo {
    text-style: bold;
    color: $accent;
    content-align: center middle;
}

#status_text {
    text-style: bold;
    content-align: center middle;
}

NCHeader {
    height: 3;
    width: 1fr;
    border: solid grey;
    dock: top;
    background: #2e296b

}

Footer {
    height: 3;
    width: 1fr;
    border: solid grey;
    dock: bottom;
    background: #2e296b;
}

MainContainer  {
    max-width: 30%;
    overflow-y: hidden;
    border: solid cyan;
    border-title-color: white;
}

Tab {
    background: #1f2837;
    color: white;
}

Tab.-active {
    background: #6366f0;
    text-style: bold;
}

Tabs {
    background: #1f2837;
    border-bottom: solid gray;
}

ListItem {
    background: #1f2837;
    color: white;
}

HelpModal {
    align: center middle;
    background: rgba(0, 0, 0, 0.7);  /* dim background */
}

SeriesAddModal {
    align: center middle;
    background: rgba(0, 0, 0, 0.7);  /* dim background */
}

#details_rows .detail-row {
    height: auto;
    padding: 0 1;
    margin: 0;
    max-width: 100;
    text-wrap: wrap;
}

.detail-key {
    text-style: bold
}


#popup {
    width: 60%;
    max-width: 75%;
    height: 100%;
    border: solid white;
    padding: 2;
    background: #1f2837;
    color: white;
    align: center middle;
    border-title-align: center;
}

#popup-buttons {
    align: center middle;
    margin-top: 1;
}

.popup-text {
    align: center middle;
    max-width: 50;
}

.loading-row {
    align-horizontal: center;
    height: 100%;
}

#general-button {
    height: 1
}

#button-bar {
    height: 2;
    padding: 0 2;
    layout: horizontal;
    align: center middle;
}

#button-bar Button {
    width: 100%;
    max-width: 30%;
    min-height: 3;
    margin: 0 1;
    background: #443ca2;
    color: white;
    text-style: bold;
    content-align: center top;
}

.detail-value {
    min-height: 1;
    overflow: hidden;
    text-wrap: wrap;
    max-width: 65;
    overflow-y: scroll;
}

.detail-series {
    border: round #6366f0;
    height: auto;
    border-title-color: white;
    width: 100%
}

.detail-book {
    border: round #6366f0;
    border-title-color: white;
    margin: 1;
    padding: 1;
    background: #1f2837;
    height: auto;
    width: 100%
}
